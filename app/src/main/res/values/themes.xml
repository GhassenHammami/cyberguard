<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CyberGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="editTextStyle">@style/CG_EditText</item>
    </style>

    <style name="Theme.CyberGuard" parent="Base.Theme.CyberGuard" />

    <style name="CG_EditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_edittext_bg</item>
    </style>

    <style name="Theme.CyberGuard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CyberGuard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CyberGuard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>