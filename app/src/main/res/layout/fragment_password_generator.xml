<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Generator"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap Generate"
            android:textIsSelectable="true"
            android:textSize="18sp"
            android:padding="14dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generate" />

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnCopy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Copy" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvLengthLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Length: 16"
            android:textStyle="bold"
            android:layout_marginBottom="6dp" />

        <SeekBar
            android:id="@+id/seekLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="24"
            android:progress="8" />

        <TextView
            android:id="@+id/tvLengthHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min 8, Max 32"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Include:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/cbUpper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uppercase (A-Z)"
            android:checked="true" />

        <CheckBox
            android:id="@+id/cbLower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lowercase (a-z)"
            android:checked="true" />

        <CheckBox
            android:id="@+id/cbNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numbers (0-9)"
            android:checked="true" />

        <CheckBox
            android:id="@+id/cbSymbols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symbols (!@#...)"
            android:checked="true"
            android:layout_marginBottom="18dp" />

        <TextView
            android:id="@+id/tvStrength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strength"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"/>

        <ProgressBar
            android:id="@+id/strengthBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@android:drawable/progress_horizontal"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvStrengthHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â€”"
            android:layout_marginBottom="12dp"/>

    </LinearLayout>
</ScrollView>
