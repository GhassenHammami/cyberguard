<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutTvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="About CyberGuard"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutTvBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="CyberGuard helps you improve your security with tools like breach checking, secure notes, training, and password generation."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aboutTvVersionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="App Version"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutTvVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="1.0.0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aboutTvCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Made with ❤️ for better cyber hygiene."
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>
